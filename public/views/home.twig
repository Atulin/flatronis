{% extends'Master.twig' %}
{% block title %}Erronis Games{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="background">

    <div class="parallax-container">
        <img src="{{ asset('assets/img/parallax/parallax-1.png') }}" class="rellax parallax-layer" data-rellax-speed="-4">
        <img src="{{ asset('assets/img/parallax/parallax-2.png') }}" class="rellax parallax-layer" data-rellax-speed="-3">
        <img src="{{ asset('assets/img/parallax/parallax-3.png') }}" class="rellax parallax-layer" data-rellax-speed="-1">
        <div class="scroll-indicator" id="scroll-indicator">‚è∑</div>
    </div>

    <nav class="navbar" id="navbar">
        <div class="item">OwO</div>
        <div class="item">UwU</div>
        <div class="item">Rawr</div>
        <div class="item">{{ msg }}</div>
    </nav>

    <div class="post-container">

        {% for post in posts %}

        <article class="post">
            <h2 class="title">{{ post.title }}</h2>
            <hr class="fading text" data-content="{{ post.category.name }}">
            <div class="excerpt">
                {{ post.body|truncate(1000, true)|nl2br }}
            </div>
            <a href="/post/{{ post.id }}/{{ post.title }}" class="read-more">Read More</a>
        </article>

        {% endfor %}

        <hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr><hr>

    </div>

</div>

<script>
    // Accepts any class name
    var rellax = new Rellax('.rellax');
</script>

{% endblock %}


{% extends'Master.twig' %}
{% block title %}Erronis Games{% endblock %}

{% block scripts %}
    <script defer src="{{ asset('assets/js/sticker.min.js') }}"></script>
{% endblock %}

{% block body %}

    {% include 'includes/navbar.twig' %}

    <div class="single-post-container">

        <article class="single-post">
            <time class="date">{{ post.date|date }}</time>
            <h1 class="title">{{ post.title }}</h1>
            <hr class="fading text" data-content="{{ post.category.name }}">
            <div class="body">
                {{ post.body|raw }}
            </div>
        </article>

    </div>

{% endblock %}


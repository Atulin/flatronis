<!doctype html>
<html lang="en">
<head>
    {% block analytics %}
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id={{ analytics }}"></script>
        <script>
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());

            gtag('config', '{{ analytics }}');
        </script>
    {% endblock %}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0, maximum-scale=5.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="Description" content="{% block description %}Erronis Games{% endblock %}">
    <link rel="canonical" href="{% block canonical %}{% endblock %}">

    <title>{% block title %}Erronis Games{% endblock %}</title>

     {#O penGraph SEO #}
    <meta property="og:title" content="{{ block('title') }}">
    <meta property="og:description" content="{{ block('description') }}">
    <meta property="og:image" content="{% block thumbnail %}{% endblock %}">
    <meta property="og:url" content="{{ block('canonical') }}">
    <meta property="og:site_name" content="Erronis Games">

     {# Twitter SEO #}
    <meta name="twitter:card" content="{% block summary %}{% endblock %}">
    <meta name="twitter:site" content="@ErronisGames">

    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.min.css') }}">

    {% block scripts %}
        <script defer src="{{ asset('assets/js/sticker.min.js') }}" type='text/javascript'></script>
        <script async src="{{ asset('assets/js/instantpage.min.js') }}" type='text/javascript'></script>
    {% endblock %}

</head>

<body>

    {% block body %}{% endblock %}

    <footer>
        {% block footer %}
            &copy; Copyright {{ "now"|date("Y") }} by <a href="http://domain.invalid/">Erronis Games</a>.
        {% endblock %}
    </footer>

<script>
    window.lazyLoadOptions = [{
        elements_selector: ".lazy",
        threshold: 120
    }]
</script>

<script async src="{{ asset('assets/js/lazyload.min.js') }}" type="text/javascript"></script>

</body>
</html>
